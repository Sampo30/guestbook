<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Guestbook - Floorball Tactics</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Floorball Tactics</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/guestbook">Guestbook</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/newmessage">New Message</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/ajaxmessage">Ajax Message</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container my-5">
      <h1 class="text-center">Guestbook</h1>
      <ul id="messages">
        <% messages.forEach(function(message) { %>
          <li>
            <strong>#<%= message.id %>: <%= message.name %></strong>
            <% if (message.country) { %>
              (<%= message.country %>)
            <% } %>
            <p><%= message.message %></p>
            <p><%= message.timestamp %></p>
          </li>
        <% }); %>
      </ul>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
